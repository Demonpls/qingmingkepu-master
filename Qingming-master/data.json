    "poetry": [
        {
            "title": "清明",
            "author": "杜牧",
            "content": [
                "清明时节雨纷纷，",
                "路上行人欲断魂。",
                "借问酒家何处有，",
                "牧童遥指杏花村。"
            ]
        },
        {
            "title": "清明日对酒",
            "author": "高翥",
            "content": [
                "南北山头多墓田，",
                "清明祭扫各纷然。",
                "纸灰飞作白蝴蝶，",
                "泪血染成红杜鹃。"
            ]
        }
    ],
